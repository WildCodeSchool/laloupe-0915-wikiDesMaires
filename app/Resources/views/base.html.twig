<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

            <!-- Optional theme -->
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
            <link rel="stylesheet" href="{{ asset('bundles/wikiwikimaire/css/style.css') }}" type="text/css"/>

        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body data-user="{{ app.user }}" {% if is_granted('ROLE_ADMIN') %} class="admin" {% endif %}>
    <header>
        <ul class="nav nav-justified navbar-primary">
            {% if app.user %}
                <li><a href="{{ path('sonata_user_profile_show') }}">Profile</a></li>
                <li><a href="{{ path('sonata_user_admin_security_logout') }}">Logout</a></li>
            {% else %}
                <li><a href="#">Wiki</a></li>
                <li><a href="{{ path('sonata_user_security_login') }}">Login</a></li>
            {% endif %}
        </ul>
    </header>

    {% block body %}
    {% endblock %}
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
